{
  "compilerOptions": { // https://www.typescriptlang.org/tsconfig
    "allowSyntheticDefaultImports": true, // Allows you name `* as` in import, e.g. `import React from "react"`
    "allowUnreachableCode": false, // Raise compiler error if code is unreachable
    "baseUrl": "src", // Set a base directory to resolve non-absolute module names.
    "declaration": true, // Generate .d.ts files for every TypeScript or JavaScript file inside your project. These .d.ts files are type definition files which describe the external API of your module.
    "diagnostics": true, // Used to output diagnostic information for debugging
    "emitDecoratorMetadata": true, // Enables experimental support for emitting type metadata for decorators
    "esModuleInterop": true, // Import non-ES modules as default imports.
    "experimentalDecorators": true, // Enables experimental support for decorators
    "forceConsistentCasingInFileNames": true, // Forces case sensitivity on file imports - forces compatibility on case-sensitive/case-insensitive systems
    "lib": [
      "es2015"
    ],
    "module": "commonjs", // https://www.typescriptlang.org/tsconfig#module
    "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statements to prevent a case fallthrough bug
    "noImplicitAny": false, // Don't throw errors by falling back to type any for JS imports https://www.typescriptlang.org/tsconfig#noImplicitAny
    "noImplicitReturns": true, // Ensure all code paths in a function to ensure they return a value
    "noUnusedLocals": false, // Report errors on unused local variables
    "noUnusedParameters": false, // Report errors on unused parameters in functions
    "outDir": "./dist", // If specified, .js (as well as .d.ts, .js.map, etc.) files will be emitted into this directory.
    "removeComments": true, // Strip all comments from TypeScript files when converting into JavaScript
    "sourceMap": true, // Enables the generation of sourcemap files to display original TypeScript source code
    "strict": true, // Results in stronger guarantees of program correctness
    "strictNullChecks": true, // https://www.typescriptlang.org/tsconfig#strictNullChecks
    "target": "es5", // Target es5 for IE9/10 strict - https://www.typescriptlang.org/tsconfig#target
    "typeRoots": [
      "./node_modules",
      "./node_modules/@types"
    ],
    "types": [
      "chai",
      "mocha",
      "node"
    ]
  },
  "files": [
    "src/index.ts"
  ]
}