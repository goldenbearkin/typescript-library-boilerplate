{
    "extends": "tslint:latest",
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "no-null-keyword": true,
        "align": [
            true,
            "parameters"
        ],
        "no-console": true,
        "no-implicit-dependencies": [true, "dev"],
        "max-line-length": [
            true,
            160
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ]
    }
}